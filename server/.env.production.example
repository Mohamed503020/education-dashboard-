# Server Configuration
PORT=3000
NODE_ENV=production

# MongoDB Atlas - Replace with your MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/education_platform?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=change-this-to-a-random-secure-string
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_DEST=./uploads
MAX_FILE_SIZE=104857600

# CORS - Set to your frontend domain, comma-separated for multiple
CORS_ORIGIN=https://your-app.onrender.com
